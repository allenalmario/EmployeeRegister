@{
    ViewData["Title"] = "New Employee Page";
}

@model Employee

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Dashboard">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="AllShifts">All Shifts</a>
                </li>
            </ul>
        </div>
        <div class="text-right">
            <form asp-action="Logout" asp-controller="Home">
                <button type="submit" class="btn btn-link">Logout</button>
            </form>
        </div>
    </div>
</nav>

<div class="text-center">
    <h1 class="display-4">New Employee Page</h1>
    <h3>Add Employee</h3>
</div>
<form class="mt-4" asp-action="NewEmployee" asp-controller="Register">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <span class = "text-danger" asp-validation-for="FirstName"></span>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <span class = "text-danger" asp-validation-for="LastName"></span>
        <input class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <span class = "text-danger" asp-validation-for="Position"></span>
        <input class="form-control" asp-for="Position">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <span class = "text-danger" asp-validation-for="PhoneNumber"></span>
        <input class="form-control" asp-for="PhoneNumber">
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span class = "text-danger" asp-validation-for="Email"></span>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <span class = "text-danger" asp-validation-for="DOB"></span>
        <input class="form-control" asp-for="DOB">
    </div>
    <div class="form-group">
        <label asp-for="HireDate"></label>
        <span class = "text-danger" asp-validation-for="HireDate"></span>
        <input class="form-control" asp-for="HireDate">
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <span class = "text-danger" asp-validation-for="Salary"></span>
        <input class="form-control" asp-for="Salary">
    </div>
    <div class="text-right mt-4">
        <button type="submit" class="btn btn-primary">Add Employee</button>
    </div>
</form>
<div class="text-right mt-3">
        <a href="/Dashboard">Cancel</a>
</div>